<% include ../../routes/helpers/metadata_functions %>
<% if (dividers.indexOf( all_field_names[idx][1] ) != -1) { %>
<td></td>
<% } else if (all_field_names[idx][1] === "DNA Extraction") { %>
<td>
    <% selected_val = get_selected_val(pid, did, "dna_extraction_meth") %>

    <select id="dna_extraction_meth<%- did %>" name="dna_extraction_meth">
        <% dna_extraction_options.forEach(function(value){ %>
        <option value="<%= value %>"
                <% if (value == selected_val) {%>
                selected
                <% } %>
        ><%= value %></option>
        <% }) %>
    </select>
</td>
<% } else if (all_field_names[idx][1] === "DNA Quantitation") { %>
<td>
    <% selected_val = get_selected_val(pid, did, "dna_quantitation") %>
    <select id="dna_quantitation<%- did%>" name="dna_quantitation">
        <% dna_quantitation_options.forEach(function(value){ %>
        <option value="<%= value %>"
                <% if (value == selected_val) {%>
                selected
                <% } %>
        ><%= value %></option>
        <% }) %>
    </select>
</td>
<!-- biome -->
<% } else if (all_field_names[idx][1] === "Biome - Primary") { %>
<td>
    <% selected_val = get_selected_val(pid, did, "biome_primary")
    %>

    <select id="biome_primary<%- did%>" name="biome_primary" class = "biome_primary">
        <% biome_primary_options.forEach(function(value){ %>
        <option value="<%= value %>"
                <% if (value == selected_val) {%>
                selected
                <% } %>
        ><%= value %></option>
        <% }) %>
    </select>
</td>
<% } else if (all_field_names[idx][1] === "Biome - Secondary") { %>
<td>
    <% var selected_val = get_selected_val(pid, did, "biome_secondary") %>
    <select id="biome_secondary<%- did %>" name="biome_secondary" class="biome_secondary">

        <% if (selected_val) { %>
        <option value="<%= selected_val%>"><%= selected_val%></option>
        <% } else { %>
        <option value="none">none</option>

        <% } %>
    </select>
</td>
<!--feature -->
<% } else if (all_field_names[idx][1] === "Environmental Feature - Primary") { %>
<td>
    <% selected_val = get_selected_val(pid, did, "feature_primary") %>

    <select id="feature_primary<%- did%>" name="feature_primary" class = "feature_primary">
        <% feature_primary_options.forEach(function(value){ %>
        <option value="<%= value %>"
                <% if (value == selected_val) {%>
                selected
                <% } %>
        ><%= value %></option>
        <% }) %>
    </select>
</td>
<% } else if (all_field_names[idx][1] === "Environmental Feature - Secondary") { %>
<td>
    <% selected_val = get_selected_val(pid, did, "feature_secondary")
    %>
    <select id="feature_secondary<%- did %>" name="feature_secondary" class="feature_secondary">
        <% if (selected_val) { %>
        <option value="<%= selected_val%>"><%= selected_val%></option>
        <% } else { %>
        <option value="none">none</option>
        <% } %>
    </select>
</td>
<!--feature end  -->
<!-- Environmental Material -->
<% } else if (all_field_names[idx][1] === "Environmental Material - Primary") { %>
<td>
    <% selected_val = get_selected_val(pid, did, "material_primary") %>

    <select id="material_primary<%- did%>" name="material_primary" class = "material_primary">
        <% material_primary_options.forEach(function(value){ %>
        <option value="<%= value %>"
                <% if (value == selected_val) {%>
                selected
                <% } %>
        ><%= value %></option>
        <% }) %>
    </select>
</td>
<% } else if (all_field_names[idx][1] === "Environmental Material - Secondary") { %>
<td>
    <% selected_val = get_selected_val(pid, did, "material_secondary") %>

    <select id="material_secondary<%- did %>" name="material_secondary" class="material_secondary">
        <% if (selected_val) { %>
        <option value="<%= selected_val%>"><%= selected_val%></option>
        <% } else { %>
        <option value="none">none</option>

        <% } %>
    </select>
</td>
<!--material end  -->

<% } else { %>
<td>
    <!-- regular field with data -->
    <% selected_val = get_selected_val(pid, did, field_name) %>
    <input type="text" id="<%= field_name %><%- did%>" name="<%= field_name %>" value="<%= selected_val %>"/>

</td>
<% } %> <!-- else -->
